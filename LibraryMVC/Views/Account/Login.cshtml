@{
    ViewData["Title"] = "Login";
   
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            /* Background image */
            background-image: url('../images/loginAndRegisterBG.png');
            background-size: cover; /* Cover the entire viewport */
            background-position: center; /* Center the background image */
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-color: rgba(0, 0, 0, 0.1);
        }

        .login-container {
            background-color: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            height : 400px;
            width: 700px;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 20px;
            }

            .login-container input[type="text"],
            .login-container input[type="password"],
            .login-container input[type="submit"] {
                width: 100%;
                padding: 10px;
                margin-top: 10px;
                margin-bottom: 10px;
                border: 1px solid #ccc;
                border-radius: 3px;
                box-sizing: border-box;
            }

            .login-container input[type="submit"] {
                background-color: #4caf50;
                color: #fff;
                cursor: pointer;
            }

                .login-container input[type="submit"]:hover {
                    background-color: #45a049;
                }

        .sign-up {
            text-align: center;
        }
        h1{
            text-align:center;
        }
    </style>

</head>
<body>
    <div class="login-container">
        <h1 style="color:white">Login</h1>
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <p class="error-message" style="color:red">@ViewData["ErrorMessage"]</p>
        }
        <br />
        <form action="Verify" method="post">
            <input type="text" name="email" placeholder="Email" required>
            <br />
            <br />
            <input type="password" name="password" placeholder="Password" required>
            <br />
            <br />
            <input type="submit" value="Login">
            <br />
            <br />
            <br />
            <div class="sign-up" style="color:white">
                Dont Have Account <a asp-action="Register" style="color:lightyellow">Sign Up</a>
           </div>
        </form>
        
    </div>
</body>
</html>

